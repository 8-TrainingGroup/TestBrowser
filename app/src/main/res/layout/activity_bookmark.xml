<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bmcolumn"
            android:orientation="horizontal">
        <ImageView android:layout_width="60dp" android:layout_height="60dp"
                   android:src="@drawable/button_back"
                   android:layout_marginStart="20dp"
                   android:layout_marginTop="20dp"
                   android:id="@+id/bmback"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="40dp"
                  android:text="@string/bookmark"
                  android:textSize="50sp"
                  android:textColor="@color/black"
                  android:id="@+id/tobookmark"/>
        <TextView android:layout_width="100dp" android:layout_height="100dp"
                  android:layout_marginTop="20dp"
                  android:layout_marginStart="40dp"
                  android:text="@string/history"
                  android:textSize="50sp"
                  android:id="@+id/tohistory"/>
    </LinearLayout>
    <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bmcolumn"
    />
</RelativeLayout>

